<div class="modal-header">
    <h4 class="modal-title">{{ demande.assure.lastName|upper }} {{ demande.assure.firstName|capitalize }} -
        N°ADH: {{ demande.assure.adherentNumber }}<span class="text-violet"></span></h4>
    <a class="btn btn-sm bg-violet text-white btn btn-sm_validDemande float-right" target="_blank"
       href="{{ path('download_demande_teletransmission', {id : demande.id}) }}"><i class="fas fa-eye"></i>
            Justificatif</a>
</div>
{% block modalbody %}
    <div class="modal-body">
        <form method="post" action="{{ path('valid_demande_teletransmission', {id : demande.id}) }}">
            <div class="form-row">
                <div class="col">
                    <label>Insee</label>
                    <input name="insee" type="text" required value="{{ demande.insee|trim }}" class="form-control">
                </div>
                <div class="col-4">
                    <label>Clé</label>
                    <input name="inseeKey" type="text" required value="{{ demande.inseeKey|trim }}"
                           class="form-control">
                </div>
            </div>
            <div class="line"></div>
            <div class="form-row">
                <div class="col">
                    <label>IBAN</label>
                    <input name="iban" type="text" value="{{ demande.iban }}" readonly class="form-control">
                </div>
            </div>
            <div class="line"></div>
            <div class="form-row">
                <div class="col">
                    <label>TRS Régime</label>
                    <input name="teletransRegime" required type="number"
                           value="{{ demande.assure.teletransRegime|trim }}" class="form-control">
                </div>
                <div class="col">
                    <label>TRS Caisse</label>
                    <input name="teletransCaisse" required type="number"
                           value="{{ demande.assure.teletransCaisse|trim }}" class="form-control">
                </div>
                <div class="col">
                    <label>TRS Centre</label>
                    <input name="teletransCentre" required type="number"
                           value="{{ demande.assure.teletransCentre|trim }}" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-sm bg-violet text-white btn btn-sm_validDemande">Valider</button>
                </div>
            </div>

        </form>
    </div>
{% endblock %}